<% layout("/layouts/boilerplate") -%>
<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div
    class="register-card p-4 shadow-lg w-100"
    style="max-width: 540px; min-width: 340px"
  >
    <div class="text-center mb-4">
      <h3 class="fw-bold">Edit Your Listing</h3>
    </div>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation d-flex flex-column gap-3"
      enctype="multipart/form-data"
    >
      <div class="mb-2 d-flex flex-column align-items-start">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          required
          class="form-control"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2">
        <p class="mb-1">Original Listing Image:</p>
        <img
          src="<%= originalImageUrl %>"
          alt="Preview Image"
          class="mb-2 rounded w-100"
          style="max-width: 220px; max-height: 220px; object-fit: cover"
        />
      </div>
      <div class="mb-2 d-flex flex-column align-items-start">
        <label for="imageUrl" class="form-label">Image:</label>
        <input
          type="file"
          id="imageUrl"
          name="listing[image]"
          class="form-control"
        />
        <div class="invalid-feedback">Please enter image url.</div>
      </div>
      <div class="mb-2 d-flex flex-column align-items-start">
        <label for="description" class="form-label">Description:</label>
        <textarea
          id="description"
          name="listing[description]"
          required
          class="form-control"
        >
<%= listing.description %></textarea
        >
        <div class="valid-feedback">Please enter a description.</div>
      </div>
      <div class="row w-100">
        <div class="col-md-4 mb-2 d-flex flex-column align-items-start">
          <label for="price" class="form-label">Price:</label>
          <input
            type="number"
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Please enter valid price.</div>
        </div>
        <div class="col-md-8 mb-2 d-flex flex-column align-items-start">
          <label for="country" class="form-label">Country:</label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Please enter valid country.</div>
        </div>
      </div>
      <div class="mb-2 d-flex flex-column align-items-start">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          required
          class="form-control"
        />
        <div class="invalid-feedback">Please enter valid location.</div>
      </div>
      <button class="btn btn-dark w-100 mt-2" type="submit">
        Update Listing
      </button>
    </form>
  </div>
</div>
<script src="/Js/script.js"></script>
